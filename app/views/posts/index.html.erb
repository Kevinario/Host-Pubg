<% @posts.each do |post| %>
    <div class="row">
        <div class='col-md-2'></div>
        <div class="blogPost panel panel-default col-md-8">
            <div class="panel-heading">
                <h3 class="panel-title"><%= link_to post.title, post_path(post.id) %></h3>
            </div>
            
            <div class="panel-body">
                <%= post.caption %>
                <div class="postFooter">
                <%= timeDisplay(post.created_at,post.updated_at) %>
                <% if current_user.try(:admin)%>
                    <%= link_to "Edit", edit_post_path(post.id) %>
                    <%= link_to "Delete", post_path(post.id), method: :delete, data: {confirm: "Are you sure you want to delete this post?" }%>
                <% end %>
                </div>
            </div>
        </div>
        <div class='col-md-2'></div>
    </div>
<% end %>
<% if current_user.try(:admin)%>
<%= link_to "New Post", posts_path %>
<% end %>